{
	"manifest_version": 2,
	"name": "Memory",
	"version": "1.0",
	"description": "Build an Extension!",
    "page_action": {
    	"default_popup": "popup.html",
    	"default_title": "MemoryPage"
    },
    "background": {
    	"scripts": ["background.js"],
    	"persistent": false
    },
    "content_scripts": [
    	{
    		"matches": ["http://*.renren.com/*", "http://*/*", "https://*/*"],
    		"js": ["content.js", "jquery-3.3.1.min.js"]
    	}
    ],
    "permissions": [
        "downloads",
    	"storage",
    	"tabs",
    	"http://*.renren.com/*"
    ]
}
